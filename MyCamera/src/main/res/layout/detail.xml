<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="23dp"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/text_detail_name"
        android:text="文件名称："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/text_detail_type"
        android:text="文件种类："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_detail_name" />
    <TextView
        android:id="@+id/text_detail_size"
        android:text="文件大小："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_detail_type" />
    <TextView
        android:id="@+id/text_detail_resolution"
        android:text="分辨率    ："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_detail_size"/>
    <TextView
        android:id="@+id/text_detail_changeTime"
        android:text="修改时间："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_detail_resolution" />
    <TextView
        android:id="@+id/text_detail_path"
        android:text="文件路径："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_detail_changeTime"/>

</RelativeLayout>