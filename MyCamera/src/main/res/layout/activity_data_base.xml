<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DataBase">

    <ListView
        android:id="@+id/lv_database"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:fastScrollEnabled="true">
    </ListView>

    <Button
        android:id="@+id/btn_db_add"
        android:text="添加"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lv_database"
        android:layout_marginLeft="40dp"/>

    <Button
        android:id="@+id/btn_db_delete"
        android:text="删除"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lv_database"
        android:layout_toRightOf="@+id/btn_db_add"
        android:layout_marginLeft="@dimen/button_distance"/>

    <Button
        android:id="@+id/btn_db_query"
        android:text="查找"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lv_database"
        android:layout_toRightOf="@id/btn_db_delete"
        android:layout_marginLeft="@dimen/button_distance"/>
</RelativeLayout>